

<% @ads.each do |ad|  %>
<div class="ad">
	<div class="row">
		<div class="title small-6 large-6 columns"> <h3><%= ad.title %></h3> </div>
		<div class="small-3 large-3 columns"></div>
		<div class="date small-3 large-3 columns"> <p> <%= ad.created_at %> </p></div>
	</div>
	
	<div class="row">
		<div class="small-11 large-11 large-centered small-centered columns">
			<p> <%= ad.description %> </p>
		</div>
	</div>
	
	<div class="row">
		<div class="small-4 large-4 columns"> <p>Location: <%= "#{ad.city}, #{ad.street}" %> </p></div>
		<div class="small-4 large-4 columns"></div>
		<div class="small-4 large-4 columns"> <p>Finder: <%= "#{ad.user.first_name} #{ad.user.last_name}" %> </p></div>
	</div>

  <div>
    <p>
      <% if ad.content_type == "Pet" %>
        <p>Pet type: <%= ad.content.pet_type %></p>
      <% elsif ad.content_type == "Doc" %>
        <p>Doc type: <%= ad.content.doc_type %></p>
        <p>Doc code: <%= ad.content.doc_code %></p>
        <p>First name: <%= ad.content.first_name %></p>
        <p>Last name: <%= ad.content.last_name %></p>
      <% end %>
    </p>
  </div>
        <div><%= link_to 'Show', ad %></div>
        <% if user_signed_in? && current_user.id == ad.user_id %>
          <div><%= link_to 'Edit', edit_ad_path(ad) %></div>
          <div><%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></div>
        <% end %>
</div>
<% end %>
