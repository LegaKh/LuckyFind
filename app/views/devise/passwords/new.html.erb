<h2 class="ad inline_block">Forgot your password?</h2>
  <div class="row">
    <div class="small-12 large-6 large-centered small-centered columns ad">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, placeholder: "Your Email" %></div>

      <div><%= f.submit "Send me reset password instructions", class: "button small success" %></div>
    <% end %>

    </div>
  </div>
