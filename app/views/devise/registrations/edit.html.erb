  <div class="row">
    <div class="small-12 large-6 columns large-centered small-centered ad">

      <h2>Edit Your profile</h2>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <% unless devise_error_messages! == "" %>
          <div class="alert-box alert radius"><%= devise_error_messages!%></div>
        <% end %>
      
        <div> <%= f.email_field :email, autofocus: true, placeholder: "Email" %></div>
      
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div><%= f.text_field :first_name, placeholder: "First Name"%></div>
          
        <div><%= f.text_field :last_name, placeholder: "Last Name"%></div>

        <div><%= f.text_field :phone, placeholder: "Phone"%></div>
      
        <div><i>(leave blank if you don't want to change it)</i><br /><br />
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %></div>
      
        <div><%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password" %></div>
      
        <div><i>(we need your current password to confirm your changes)</i><br /><br />
          <%= f.password_field :current_password, autocomplete: "off", placeholder: "Current password" %></div>
      
        <div><%= f.submit "Update", class: "button small"  %></div>
      <% end %>
      
      <h3>Cancel my account</h3>
      
      <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
      
      <%= link_to "Back", :back, class: "button small" %>
    </div>
  </div>
