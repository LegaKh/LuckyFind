<%= form_for(@license_plate) do |f| %>
  <% if @license_plate.errors.any? || @ad.errors.any? %>
    <div data-alert class="alert-box alert radius">
      <h2><%= pluralize((@license_plate.errors.count + @ad.errors.count), "error") %> prohibited this ad from being saved:</h2>
      <ul>
      <% @license_plate.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      <% @ad.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
      </div>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :number %><br>
    <%= f.text_field :number %>
  </div>

  <%= fields_for (@ad) do |f| %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :street %><br>
    <%= f.text_field :street %>
  </div>

  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, rows: 6 %>
  </div>

  <% end %>

  <div class="actions">
    <%= f.submit "Ok", class: "button small" %>
  </div>

<% end %>
