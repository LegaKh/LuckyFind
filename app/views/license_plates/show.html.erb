<p id="notice"><%= notice %></p>



<div class="ad">
	<div class="row">
		<div class="title small-6 large-6 columns"> <h3><%= @license_plate.ad.title %></h3> </div>
		<div class="small-3 large-3 columns"></div>
		<div class="date small-3 large-3 columns"> <p> <%= @license_plate.ad.created_at %> </p></div>
	</div>
	
	<div class="row">
		<div class="small-11 large-11 large-centered small-centered columns">
			<p> <%= @license_plate.ad.description %> </p>
		</div>
	</div>
	
	<div class="row">
		<div class="small-4 large-4 columns"> <p>Location: <%= "#{@license_plate.ad.city}, #{@license_plate.ad.street}" %> </p></div>
		<div class="small-4 large-4 columns"></div>
		<div class="small-4 large-4 columns"> <p>Finder: <%= "#{@license_plate.ad.user.first_name} #{@license_plate.ad.user.last_name}" %> </p></div>
	</div>

  <div class="row">
    <div class="small-12 large-12 columns"><p>License Plate number: <%= @license_plate.number %></p></div>
  </div>

</div>  

