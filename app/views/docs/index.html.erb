<h1>Listing docs</h1>
 <%= link_to 'New Doc', new_doc_path %>

<% @docs.each do |pet|  %>
<div class="ad">
	<div class="row">
		<div class="title small-6 large-6 columns"> <h3><%= pet.ad.title %></h3> </div>
		<div class="small-3 large-3 columns"></div>
		<div class="date small-3 large-3 columns"> <p> <%= pet.ad.created_at %> </p></div>
	</div>
	
	<div class="row">
		<div class="small-11 large-11 large-centered small-centered columns">
			<p> <%= pet.ad.description %> </p>
		</div>
	</div>
	
	<div class="row">
		<div class="small-4 large-4 columns"> <p>Location: <%= "#{pet.ad.city}, #{pet.ad.street}" %> </p></div>
		<div class="small-4 large-4 columns"></div>
		<div class="small-4 large-4 columns"> <p>Finder: <%= "#{pet.ad.user.first_name} #{pet.ad.user.last_name}" %> </p></div>
	</div>

    <div class="row">
    <div class="small-4 large-4 columns"><p>Doc type: <%= pet.doc_type %></p></div>
    <div class="small-4 large-4 columns"><p>Doc code: <%= pet.doc_code %></p></div>
    <div class="small-4 large-4 columns"><p>First name: <%= pet.first_name %></p></div>
    <div class="small-4 large-4 columns"><p>Last name: <%= pet.last_name %></p></div>
  </div>

    <div><%= link_to 'Show', pet %></div>
    <% if user_signed_in? && current_user.id == pet.ad.user_id %>
      <div><%= link_to 'Edit', edit_doc_path(pet) %></div>
      <div><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></div>
    <% end %>
</div>  



<% end %>
